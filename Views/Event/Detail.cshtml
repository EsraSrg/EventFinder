@model Event


@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <img src="@Model.Image" class="img-fluid" alt="@Model.Title">
            <p class="mt-3">@Model.Description</p>
        </div>
        <div class="col-md-4">
            <h3>Event Details</h3>
            <ul class="list-group">
                <li class="list-group-item"><strong>Category:</strong> @Model.EventCategory</li>
                <li class="list-group-item"><strong>Location:</strong> @Model.Address?.City, @Model.Address?.State</li>
                <li class="list-group-item"><strong>Organizer:</strong> @Model.AppUser?.UserName</li>
            </ul>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary">Back to Events</a>
    </div>
</div>
