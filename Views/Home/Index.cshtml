@model HomeViewModel
{

    ViewData["Title"] = "Home Page"
}

<section class="bg-dark space-lg" data-jarallax data-speed="0.2">
    <img alt="Image" src="/img/photo-road.jpg" class="bg-image position-absolute opacity-20" />
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-12 col-md-6 col-lg-5 section-intro">
                <h1 class="display-3 text-light">Platform form tech Communities</h1>
                <span class="lead text-light">
                    Buraya bir tanıtım yazısı yaz
                </span>
           
</section>

<section>
    <div class="container">
        @if (Model.Events == null)
        {
            <h1 class="fw-light text-center text-danger">
                There are no tech events in your area! <a asp-controller="Event" asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between mb-5">
                <div class="col-auto">
                    <h3 class="text-primary">tech events near @Model.City, @Model.State</h3>
                </div>
                <div class="col-auto">
                    <a href="#" class="btn btn-outline-primary">View all</a>
                </div>
            </div>
            <ul class="row feature-list feature-list-sm">
                @foreach (var item in Model.Events)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="card shadow-sm border-0 rounded">
                            <a href="#">
                                <img class="card-img-top rounded-top" src="@item.Image" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <a href="#">
                                    <h4 class="card-title text-dark">@item.Title</h4>
                                    <p class="card-text text-body">@item.Description</p>
                                </a>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border-0">
                                <div class="text-small">
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item"><i class="icon-heart text-danger"></i> 221</li>
                                        <li class="list-inline-item"><i class="icon-message text-primary"></i> 14</li>
                                    </ul>
                                </div>
                                <a type="btn btn-success" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</section>
