@model UserDetailViewModel


<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0 rounded text-center p-4">
                    <img src="@Model.ProfileImageUrl" class="rounded-circle mx-auto mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h2 class="fw-bold">@Model.UserName</h2>
                    <p class="text-muted">User Profile</p>
                    <a href="javascript:history.back()" class="btn btn-primary mt-3">Back</a>
                </div>
            </div>
        </div>
    </div>
</section>
